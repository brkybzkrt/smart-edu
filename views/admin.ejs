<% if(user.role==='Admin') {%>
    <div class="all-title-box">
        <div class="container text-center">
            <h1><%=user.name%><span class="m_1">ADMÄ°N</span></h1>
        </div>
    </div>


    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-12 blog-post-single">					
